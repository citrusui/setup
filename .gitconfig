[core]
  editor = "atom --wait" # Use Atom for Git commits
  excludesfile = ~/.gitignore # Set as global gitignore

# Various status color overrides

[color "branch"]
  current = yellow
  local = green
  remote = magenta
  upstream = bold cyan
[color "diff"]
  meta = cyan bold
  frag = normal bold
  old = red
  new = green
  whitespace = magenta reverse
[color "status"]
  added = green
  changed = yellow
  untracked = red
[commit]
  gpgsign = true # Use GPG signing
[diff]
  renames = copies # Detect file copies as renames
[help]
  autocorrect = 10 # Autocorrect misspelled commands after a 1 second delay
